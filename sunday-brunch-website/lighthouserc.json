{
  "ci": {
    "collect": {
      "startServerCommand": "npm run preview",
      "url": ["http://localhost:4173/"],
      "numberOfRuns": 3,
      "settings": {
        "preset": "desktop",
        "throttling": {
          "rttMs": 40,
          "throughputKbps": 10240,
          "cpuSlowdownMultiplier": 1
        }
      }
    },
    "assert": {
      "assertions": {
        "categories:performance": ["error", {"minScore": 0.9}],
        "categories:accessibility": ["error", {"minScore": 1.0}],
        "categories:best-practices": ["error", {"minScore": 0.9}],
        "categories:seo": ["error", {"minScore": 0.9}],

        "first-contentful-paint": ["error", {"maxNumericValue": 1800}],
        "largest-contentful-paint": ["error", {"maxNumericValue": 2500}],
        "cumulative-layout-shift": ["error", {"maxNumericValue": 0.1}],
        "total-blocking-time": ["error", {"maxNumericValue": 300}],
        "speed-index": ["error", {"maxNumericValue": 3400}],

        "interactive": ["error", {"maxNumericValue": 3800}],
        "max-potential-fid": ["error", {"maxNumericValue": 130}],

        "resource-summary:script:size": ["error", {"maxNumericValue": 512000}],
        "resource-summary:stylesheet:size": ["error", {"maxNumericValue": 51200}],
        "resource-summary:document:size": ["error", {"maxNumericValue": 51200}],
        "resource-summary:image:size": ["warn", {"maxNumericValue": 1048576}],
        "resource-summary:font:size": ["warn", {"maxNumericValue": 102400}],
        "resource-summary:total:size": ["warn", {"maxNumericValue": 2097152}],

        "unused-javascript": ["warn", {"maxLength": 0}],
        "unused-css-rules": ["warn", {"maxLength": 0}],
        "modern-image-formats": ["warn", {"maxLength": 0}],
        "uses-responsive-images": ["warn", {"maxLength": 0}],
        "offscreen-images": ["warn", {"maxLength": 0}],

        "uses-long-cache-ttl": ["warn", {"minScore": 0.7}],
        "uses-text-compression": ["error", {"minScore": 1.0}],
        "render-blocking-resources": ["warn", {"maxLength": 2}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}
